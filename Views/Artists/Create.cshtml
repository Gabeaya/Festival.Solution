@{
  Layout = "_Layout";
}

@model Festival.Models.Artist

<h4>Add a new artist</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.SetList)
    @Html.TextBoxFor(model => model.SetList)
    @Html.LabelFor(model => model.OverTwentyOne)
    @Html.TextBoxFor(model => model.OverTwentyOne)
    @Html.LabelFor(model => model.Stage)
    @Html.DropDownList("StageId")
    <input type="submit" value="Add new artist info" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all artists", "Index")</p>