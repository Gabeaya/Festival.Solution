@{
  Layout = "_Layout";
}

@using Festival.Models;
@model List<Festival.Models.Artist>;
<h1>Artists</h1>

@if (@Model.Count == 0)
{
  <h3>No artists have been added yet!</h3>
} 
<ul>
  @foreach (Artist artist in Model)
  {
    <li>@Html.ActionLink($"{artist.Name}", "Details", new { id = artist.ArtistId }) | @artist.Stage.Name</li>
  }
</ul>
<p>@Html.ActionLink("Add new artist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

