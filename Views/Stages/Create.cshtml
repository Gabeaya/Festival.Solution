@{
  Layout = "_Layout";
}

@model Festival.Models.Stage

<h4>Add a new artist</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Capacity)
    @Html.TextBoxFor(model => model.Capacity)
    @Html.LabelFor(model => model.Location)
    @Html.TextBoxFor(model => model.Location)
    <input type="submit" value="Add new stage info" />
}
<p>@Html.ActionLink("Show all stages", "Index")</p>