@{
  Layout = "_Layout";
}

@using Festival.Models;
@model List<Festival.Models.Stage>;
<h1>Stages</h1>

@if (@Model.Count == 0)
{
  <h3>No stages have been added yet!</h3>
} 
<ul>
  @foreach (Stage stage in Model)
  {
    <li>@Html.ActionLink($"{stage.Name}", "Details", new { id = stage.StageId })</li>
  }
</ul>
<p>@Html.ActionLink("Add new stage", "Create")</p>
<p>@Html.ActionLink("Home", "Index")</p>